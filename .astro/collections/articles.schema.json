{
  "$ref": "#/definitions/articles",
  "definitions": {
    "articles": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "date": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "category": {
          "type": "string",
          "enum": [
            "Briefing",
            "Analysis",
            "News"
          ]
        },
        "summary": {
          "type": "string",
          "minLength": 10,
          "maxLength": 300
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "minItems": 1,
          "errorMessage": {
            "minItems": "At least one source is required"
          }
        },
        "provenance_id": {
          "type": "string"
        },
        "author_bot_id": {
          "type": "string"
        },
        "cover_image": {
          "type": "string"
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "human_requested": {
          "type": "boolean",
          "default": false
        },
        "contributor_model": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "date",
        "tags",
        "category",
        "summary",
        "sources",
        "provenance_id"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}